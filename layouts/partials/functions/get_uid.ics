{{- $t := .Title -}}
{{- with $x := split (path.Dir .File.Dir) "/" -}}
    {{- $cType := index $x 0 -}}
    {{- if eq $cType "pressinfo" -}}
        {{- with $y := index $x 1 -}}
        {{- with $m := index $x 2 -}}
        {{- $m -}}.{{- $y -}}
        {{- end -}}
        {{- end -}}
    {{- else if eq $cType "event" -}}
        {{- with $y := index $x 1 -}}
        {{- $eType := index $x 2 -}}
        {{- if or (eq $eType "sbgcup") (eq $eType "schcup") -}}
            {{- with $m := index $x 3 -}}
                {{- $eType -}} {{- $m -}}.{{- $y -}}
            {{- end -}}
        {{- else -}}
            {{- replaceRE "(\\s)" "" $t -}}.{{- $y -}}
        {{- end -}}
        {{- end -}}
    {{- end -}}
{{- end -}}